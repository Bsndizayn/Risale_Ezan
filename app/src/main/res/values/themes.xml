<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.RisaleEzan" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/light_gold</item>
        <item name="colorPrimaryVariant">@color/dark_burgundy</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/light_gold</item>
        <item name="colorSecondaryVariant">@color/light_gold</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/dark_burgundy</item>
    </style>

    <style name="BottomNavTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomBottomNavigationView">
        <item name="android:background">@color/transparent</item>
        <item name="itemIconTint">@color/bottom_nav_selector</item>
        <item name="itemTextColor">@color/bottom_nav_selector</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemPaddingTop">2dp</item>
        <item name="itemPaddingBottom">2dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="itemTextAppearanceActive">@style/BottomNavTextCompact</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavTextCompact</item>
    </style>

    <style name="BottomNavTextCompact" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>


    <style name="TextAppearance.RisaleEzan.Headline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.RisaleEzan.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.RisaleEzan.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Widget.RisaleEzan.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?attr/colorOutlineVariant</item>
    </style>


</resources>