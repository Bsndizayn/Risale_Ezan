<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/dark_burgundy">
    <item>
        <layer-list>
            <!-- Dış border -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20FFFFFF" />
                    <corners android:radius="30dp" />
                </shape>
            </item>
            <!-- İç kısım -->
            <item
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#56FFFFFF" />
                    <corners android:radius="29dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>