<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF400606">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.00" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide1Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide2Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide3Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.00" />


    <LinearLayout
        android:id="@+id/shelfLayout1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/son_okunanlar_raf_arkaplan"
        app:layout_constraintTop_toTopOf="@+id/guideTop"
        app:layout_constraintBottom_toTopOf="@+id/guide1Bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/categoryTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Son Okunanlar"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/category_title_margin_start"
            android:layout_marginBottom="8dp"
            android:background="@drawable/title_background_strip"
            android:paddingVertical="4dp"
            android:gravity="center_vertical" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalBookRecyclerView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shelfLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/kulliyat_raf_arkaplan"
        app:layout_constraintTop_toBottomOf="@+id/guide1Bottom"
        app:layout_constraintBottom_toTopOf="@+id/guide2Bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/categoryTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/category_title_margin_start"
            android:layout_marginBottom="8dp"
            android:background="@drawable/title_background_strip"
            android:gravity="center_vertical"
            android:paddingVertical="4dp"
            android:text="Risale-i Nur Külliyatı"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalBookRecyclerView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shelfLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/evrad_kuran_raf_arkaplan"
        app:layout_constraintTop_toBottomOf="@+id/guide2Bottom"
        app:layout_constraintBottom_toTopOf="@+id/guide3Bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/categoryTitle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evrad ve Kur'an"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/category_title_margin_start"
            android:layout_marginBottom="8dp"
            android:background="@drawable/title_background_strip"
            android:paddingVertical="4dp"
            android:gravity="center_vertical" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalBookRecyclerView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/shelfLayout4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/kucuk_kitaplar_raf_arkaplan"
        app:layout_constraintTop_toBottomOf="@+id/guide3Bottom"
        app:layout_constraintBottom_toTopOf="@+id/guideBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/categoryTitle4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Küçük Kitaplar"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/category_title_margin_start"
            android:layout_marginBottom="8dp"
            android:background="@drawable/title_background_strip"
            android:paddingVertical="4dp"
            android:gravity="center_vertical" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalBookRecyclerView4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_weight="1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>