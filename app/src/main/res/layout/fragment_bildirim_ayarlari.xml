<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_burgundy"
    android:fillViewport="true"
    tools:context=".BildirimAyarlariFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            android:text="EZAN SES VE BİLDİRİM AYARLARI"
            android:textColor="@color/light_gold"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="İmsak Bildirimi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageViewImsakSound"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sound" />
            </LinearLayout>
            <TextView
                android:id="@+id/textViewImsakSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seçili ses"
                android:textColor="@color/light_gold"
                android:textSize="14sp" />
            <Spinner
                android:id="@+id/spinnerImsakAdjustment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:popupBackground="@drawable/spinner_dropdown_background" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#40FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Güneş Bildirimi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageViewGunesSound"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sound" />
            </LinearLayout>
            <TextView
                android:id="@+id/textViewGunesSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seçili ses"
                android:textColor="@color/light_gold"
                android:textSize="14sp" />
            <Spinner
                android:id="@+id/spinnerGunesAdjustment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:popupBackground="@drawable/spinner_dropdown_background" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#40FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Öğle Bildirimi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageViewOgleSound"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sound" />
            </LinearLayout>
            <TextView
                android:id="@+id/textViewOgleSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seçili ses"
                android:textColor="@color/light_gold"
                android:textSize="14sp" />
            <Spinner
                android:id="@+id/spinnerOgleAdjustment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:popupBackground="@drawable/spinner_dropdown_background" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#40FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="İkindi Bildirimi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageViewIkindiSound"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sound" />
            </LinearLayout>
            <TextView
                android:id="@+id/textViewIkindiSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seçili ses"
                android:textColor="@color/light_gold"
                android:textSize="14sp" />
            <Spinner
                android:id="@+id/spinnerIkindiAdjustment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:popupBackground="@drawable/spinner_dropdown_background" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#40FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Akşam Bildirimi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageViewAksamSound"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sound" />
            </LinearLayout>
            <TextView
                android:id="@+id/textViewAksamSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seçili ses"
                android:textColor="@color/light_gold"
                android:textSize="14sp" />
            <Spinner
                android:id="@+id/spinnerAksamAdjustment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:popupBackground="@drawable/spinner_dropdown_background" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#40FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yatsı Bildirimi"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageViewYatsiSound"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_sound" />
            </LinearLayout>
            <TextView
                android:id="@+id/textViewYatsiSound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Seçili ses"
                android:textColor="@color/light_gold"
                android:textSize="14sp" />
            <Spinner
                android:id="@+id/spinnerYatsiAdjustment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:popupBackground="@drawable/spinner_dropdown_background" />
        </LinearLayout>
        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#40FFFFFF"/>

    </LinearLayout>
</ScrollView>